<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_amber_background"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/toptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:cursorVisible="true"
        android:shadowColor="#FFFFFF"
        android:text="Sasaram Restaurents"
        android:textColor="#e65100"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="380dp"
        android:layout_height="309dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/shershah" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:shadowColor="#E91E63"
        android:text="Top Restaurents"
        android:textColor="#F5F3F2"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button1_background"
        android:text="budget restaurent"
        android:textColor="#F5F3F2"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:layout_gravity="center"
        android:background="@drawable/button2_background"
        android:text="Exit"
        android:textColor="#F5F3F2"
        android:textStyle="bold"/>
</LinearLayout>